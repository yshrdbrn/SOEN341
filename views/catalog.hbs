<p>
    <a href="/panel/">Home</a>
</p>
{{#if isadmin}}
<p>
    <a href="/panel/catalog/add">Add An Item</a>
</p>
{{/if}}

    <form action="/panel/catalog/" method="post">
    <input type="text" name="searchString"><button>Search</button>
    <label for="Sort by">Sort By:</label>

    <select name="sortBy">
        <option value="itemType">Item Type</option>
        <option value="title">Title</option>
    </select>
    </form>

<table>
{{#each items as |item|}}

    <thead>
    {{#each item}}
        {{#if . }}
            <th>{{@key}}</th>
        {{/if}}
    {{/each}}
    </thead>
    <tbody>
        <tr>
        {{#each item}}
            {{#if . }}
                <td>{{.}}</td>
            {{/if}}
        {{/each}}

        {{#if ../isadmin}}
        <td>
            <form action="/panel/catalog/modify/{{item.id}}" method="get">
            <button>Modify</button>
            </form>
        </td>

        <td>
            <form action="/panel/catalog/delete/{{item.id}}" method="post">
            <button>Delete</button>
            </form>
        </td>
        {{/if}}
        </tr>
    </tbody>


{{/each}}
</table>
