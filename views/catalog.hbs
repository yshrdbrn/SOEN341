<p>
    <a href="/panel/catalog/add">Add An Item</a>
</p>

{{#each items as |item|}}
<table>
    <thead>
    {{#each item}}
        {{#if . }}
            <th>{{@key}}</th>
        {{/if}}
    {{/each}}
    </thead>
    <tbody>
        <tr>
        {{#each item}}
            {{#if . }}
                <td>{{.}}</td>
            {{/if}}    
        {{/each}}
        </tr>
    </tbody>
    <table>
         {{#if item.id}}
            <form method="router.put" action="/panel/catalog/:item_id">
            <button type="submit">Modify</button>
            </form>
        {{/if}}
    </table>

    


</table>
{{/each}}